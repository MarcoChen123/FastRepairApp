<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:useLevel="false" >
            <solid android:color="@color/chatting_msg_bg" />

            <stroke
                android:width="1dp"
                android:color="@color/white" />

            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape
            android:bottom="1dp"
            android:left="1dp"
            android:right="1dp"
            android:shape="oval"
            android:top="1dp"
            android:useLevel="false" >
            <solid android:color="@color/chatting_msg_bg" />

            <stroke
                android:width="1dp"
                android:color="@color/white" />

            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>