<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_016DB6"
        android:gravity="center"
        android:padding="13dp"
        android:text="发布"
        android:textColor="@color/white"
        android:textSize="19sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="28dp"
        android:lineSpacingMultiplier="1.3"
        android:text="请按照提示填写\n信息提交之后需要平台审核"
        android:textColor="#ff999999"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_publish_sample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="27dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_upload_sample">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传样本"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一键上传，快速分享"
                android:textColor="#ffffffff"
                android:layout_marginTop="12dp"
                android:textSize="10sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_upload_sample"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_oval_white"
            android:padding="11dp"
            android:layout_marginRight="33dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_publish_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_submit_service">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交产品/服务"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您提交材料，其余的交给我们"
                android:textColor="#ffffffff"
                android:layout_marginTop="12dp"
                android:textSize="10sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_submit_service"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_oval_white"
            android:padding="11dp"
            android:layout_marginRight="33dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_publish_requirement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_publish_require">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布需求"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平台会人工确认需求的真实性"
                android:textColor="#ffffffff"
                android:layout_marginTop="12dp"
                android:textSize="10sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_publish_require"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_oval_white"
            android:padding="11dp"
            android:layout_marginRight="33dp"/>

    </RelativeLayout>

</LinearLayout>