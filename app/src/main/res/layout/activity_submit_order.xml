<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_find_job" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red_be1721" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="报修设备类型"
                android:textColor="@color/grey_333"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="16dp"
            android:background="@color/transparent"
            android:hint="请选择"
            android:textColor="@color/grey_333"
            android:textColorHint="#C8C9CD"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="16dp"
            android:background="#f1f1f5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red_be1721" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="报修设备数量"
                android:textColor="@color/grey_333"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="16dp"
            android:background="@color/transparent"
            android:inputType="number"
            android:hint="请填写设备数量"
            android:textColor="@color/grey_333"
            android:textColorHint="#C8C9CD"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="16dp"
            android:background="#f1f1f5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red_be1721" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="报修故障/需求类型"
                android:textColor="@color/grey_333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="（不是维修类型不做选择）"
                android:layout_gravity="center_vertical"
                android:textColor="@color/grey_999"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="16dp"
            android:background="@color/transparent"
            android:hint="请选择"
            android:textColor="@color/grey_333"
            android:textColorHint="#C8C9CD"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="16dp"
            android:background="#f1f1f5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red_be1721" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="故障/需求描述"
                android:textColor="@color/grey_333"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:background="@drawable/shape_input"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="top"
                android:hint="请输入设备故障情况（异常、损坏）以及损坏原等内容，方便师傅判断问题、准备工具"
                android:textColor="@color/grey_333"
                android:textColorHint="#C8C9CD"
                android:elevation="4dp"
                android:padding="12dp"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/300"
                android:textColor="#C8C9CD"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_voice_button"
                android:layout_above="@id/tv_voice_tips"
                android:layout_marginBottom="8dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_voice_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语音：如不便打字，可使用语音报修"
                android:textColor="@color/grey_333"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"/>
        </RelativeLayout>

        <com.qmuiteam.qmui.widget.QMUIFloatLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:qmui_childHorizontalSpacing="10dp"
            app:qmui_childVerticalSpacing="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <com.chengquan.fastrepairapp.widget.repair.LabelCheckbox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checkbox_paddingTop="9dp"
                app:checkbox_paddingBottom="9dp"
                app:checkbox_paddingLeft="15dp"
                app:checkbox_paddingRight="15dp"
                app:checkbox_textSize="12sp"
                app:checkbox_text="自备工具"/>

            <com.chengquan.fastrepairapp.widget.repair.LabelCheckbox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checkbox_paddingTop="9dp"
                app:checkbox_paddingBottom="9dp"
                app:checkbox_paddingLeft="15dp"
                app:checkbox_paddingRight="15dp"
                app:checkbox_textSize="12sp"
                app:checkbox_text="需要驻场"/>

            <com.chengquan.fastrepairapp.widget.repair.LabelCheckbox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checkbox_paddingTop="9dp"
                app:checkbox_paddingBottom="9dp"
                app:checkbox_paddingLeft="15dp"
                app:checkbox_paddingRight="15dp"
                app:checkbox_textSize="12sp"
                app:checkbox_text="承担差旅"/>

            <com.chengquan.fastrepairapp.widget.repair.LabelCheckbox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checkbox_paddingTop="9dp"
                app:checkbox_paddingBottom="9dp"
                app:checkbox_paddingLeft="15dp"
                app:checkbox_paddingRight="15dp"
                app:checkbox_textSize="12sp"
                app:checkbox_text="接受上门费"/>

            <com.chengquan.fastrepairapp.widget.repair.LabelCheckbox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checkbox_paddingTop="9dp"
                app:checkbox_paddingBottom="9dp"
                app:checkbox_paddingLeft="15dp"
                app:checkbox_paddingRight="15dp"
                app:checkbox_textSize="12sp"
                app:checkbox_text="选择维修企业"/>

            <com.chengquan.fastrepairapp.widget.repair.LabelCheckbox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checkbox_paddingTop="9dp"
                app:checkbox_paddingBottom="9dp"
                app:checkbox_paddingLeft="15dp"
                app:checkbox_paddingRight="15dp"
                app:checkbox_textSize="12sp"
                app:checkbox_text="选择附近"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/selector_order_radio"
                    android:drawablePadding="4dp"
                    android:button="@null"
                    android:textColor="@color/grey_333"
                    android:textSize="12sp"
                    android:text="急"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/selector_order_radio"
                    android:drawablePadding="4dp"
                    android:layout_marginLeft="8dp"
                    android:button="@null"
                    android:textColor="@color/grey_333"
                    android:textSize="12sp"
                    android:text="不急"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/selector_order_radio"
                    android:layout_marginLeft="8dp"
                    android:drawablePadding="4dp"
                    android:button="@null"
                    android:textColor="@color/grey_333"
                    android:textSize="12sp"
                    android:text="暂缓"/>
            </RadioGroup>
        </com.qmuiteam.qmui.widget.QMUIFloatLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red_be1721" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="上传设备铭牌图片、故障部位图片或视频"
                android:textColor="@color/grey_333"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_add_photo"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red_be1721" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="服务时间"
                android:textColor="@color/grey_333"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="16dp"
            android:background="@color/transparent"
            android:hint="请选择"
            android:textColor="@color/grey_333"
            android:textColorHint="#C8C9CD"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="16dp"
            android:background="#f1f1f5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="联系信息"
            android:textColor="@color/grey_333"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_input"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:paddingLeft="7dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red_be1721" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名:"
                android:textColor="@color/grey_666"
                android:textSize="14sp"
                android:layout_marginLeft="4dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:background="@color/transparent"
                android:layout_marginLeft="8dp"
                android:textColor="@color/grey_666"
                android:textColorHint="#C8C9CD"
                android:hint="请输入真实姓名"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_input"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:paddingLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red_be1721" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码:"
                android:textColor="@color/grey_666"
                android:textSize="14sp"
                android:layout_marginLeft="4dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:background="@color/transparent"
                android:layout_marginLeft="8dp"
                android:textColor="@color/grey_666"
                android:textColorHint="#C8C9CD"
                android:hint="请输入手机号码"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_input"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red_be1721" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="短信验证码:"
                android:textColor="@color/grey_666"
                android:textSize="14sp"
                android:layout_marginLeft="4dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:background="@color/transparent"
                android:layout_marginLeft="8dp"
                android:textColor="@color/grey_666"
                android:textColorHint="#C8C9CD"
                android:hint="请输入短信验证码"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送验证码"
                android:textColor="#016DB6"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_input"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:paddingLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red_be1721" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司:"
                android:textColor="@color/grey_666"
                android:textSize="14sp"
                android:layout_marginLeft="4dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:background="@color/transparent"
                android:layout_marginLeft="8dp"
                android:textColor="@color/grey_666"
                android:textColorHint="#C8C9CD"
                android:hint="请输入公司名称"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="发票"
            android:textColor="@color/grey_333"
            android:textSize="14sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子发票"
                android:textColor="@color/grey_666"
                android:textSize="15sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:text="纸质发票"
                android:textColor="@color/grey_666"
                android:textSize="15sp"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red_be1721" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="支付方式"
                android:textColor="@color/grey_333"
                android:textSize="14sp" />
        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线上支付"
                android:textColor="@color/grey_666"
                android:textSize="15sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:text="线下支付"
                android:textColor="@color/grey_666"
                android:textSize="15sp"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="16dp">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已经同意并阅读"
                android:textSize="14sp"
                android:textColor="@color/grey_333"
                android:drawablePadding="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《保修规则》"
                android:textSize="14sp"
                android:textColor="#618CDF"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="急速快修平台客服电话：400-1122-110"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="立即报修"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/white"
            app:qmui_backgroundColor="@color/blue_016DB6"
            app:qmui_radius="6dp"
            android:elevation="8dp"
            android:padding="15dp"
            android:layout_marginTop="38dp"/>

    </LinearLayout>

</ScrollView>