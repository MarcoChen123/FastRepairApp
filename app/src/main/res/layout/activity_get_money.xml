<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_margin="15dp"
        android:background="#D6F2FF"
        android:gravity="center_vertical"
        android:lineSpacingExtra="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="        以下均为必填项，请认真填写，须与个人帐户信息完全一致，才能提现，提现成功后48小时到帐。"
        android:textColor="@color/grey_333"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额："
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="12000.00元"
            android:textColor="#ffdf3028"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_useHistoryAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="使用历史提现帐户"
            android:textColor="#ff206ba8"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="账户名："
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <EditText
            android:layout_width="194dp"
            android:layout_height="24dp"
            android:background="@drawable/shape_input"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            tools:text="3423423" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="账号："
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <EditText
            android:layout_width="194dp"
            android:layout_height="24dp"
            android:background="@drawable/shape_input"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            tools:text="3423423" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="开户行："
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <EditText
            android:layout_width="194dp"
            android:layout_height="24dp"
            android:background="@drawable/shape_input"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            tools:text="3423423" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="提现金额："
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <EditText
            android:layout_width="194dp"
            android:layout_height="24dp"
            android:background="@drawable/shape_input"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            tools:text="3423423" />
    </LinearLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:layout_width="198dp"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="立即提现"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:qmui_backgroundColor="#016DB6"
        app:qmui_radius="5dp" />
</LinearLayout>